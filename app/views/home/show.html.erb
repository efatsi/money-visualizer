<table>
  <tr>
    <td>Category</td>
    <td>Avg Amount</td>
  </tr>

  <% Category.all.each do |category| %>
    <tr>
      <td><%= category.name || "Unknown" %></td>
      <td><%= category.month_average.round(2) %></td>
    </tr>
  <% end %>
</table>

